<adonisControls:AdonisWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMM_Hide_Launcher.Others"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:hc="https://handyorg.github.io/handycontrol" 
        x:Class="DMM_Hide_Launcher.Others.Game_Update"
        Title="游戏更新"
        MinHeight="450"
        MinWidth="550"
        Height="471"
        Width="550"
        WindowStartupLocation="CenterOwner"
        FontFamily="{DynamicResource MiSansFont}"
        ResizeMode="NoResize">
    <Grid Margin="25,25,25,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="123"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="游戏版本更新" 
            FontSize="20" 
            FontWeight="Medium" 
            Margin="0,0,0,25" 
            HorizontalAlignment="Center" Width="120"
            />

        <StackPanel Grid.Row="1" Margin="0,0,0,18">
            <TextBlock Text="当前版本:" FontSize="13" Margin="0,0,0,6" Foreground="Gray"/>
            <TextBlock x:Name="txtCurrentVersion" Text="正在检测..." FontSize="16" FontWeight="Medium"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,18">
            <TextBlock Text="最新版本:" FontSize="13" Margin="0,0,0,6" Foreground="Gray"/>
            <TextBlock x:Name="txtTargetVersion" Text="正在检测..." FontSize="16" FontWeight="Medium"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,18">
            <TextBlock Text="更新状态:" FontSize="13" Margin="0,0,0,6" Foreground="Gray"/>
            <TextBlock x:Name="txtStatus" Text="准备就绪" FontSize="15" FontWeight="Medium" TextWrapping="Wrap"/>
        </StackPanel>

        <Border Grid.Row="4" Padding="15" CornerRadius="8" x:Name="downloadInfoBorder" Visibility="Collapsed">
            <StackPanel>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="下载速度" FontSize="12" Foreground="Gray" Margin="0,0,0,4"/>
                        <TextBlock x:Name="txtDownloadSpeed" Text="0.00 MB/s" FontSize="18" FontWeight="Medium"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="已下载" FontSize="12" Foreground="Gray" Margin="0,0,0,4" TextAlignment="Right"/>
                        <TextBlock x:Name="txtDownloadedSize" Text="0.00 MB / 0.00 MB" FontSize="16" FontWeight="Medium" TextAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <ProgressBar 
                    x:Name="progressBar" 
                    Height="10" 
                    Margin="0,0,0,12"
                    IsIndeterminate="False"
                    />


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="剩余时间:" FontSize="12" Foreground="Gray" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtRemainingTime" Text="--:--:--" FontSize="14" FontWeight="Medium" Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>

        <StackPanel 
            Grid.Row="5" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" Height="50" VerticalAlignment="Center" Margin="0,0,10,0">
            <Button 
                x:Name="BtnCancelDownload" 
                Content="取消下载" 
                Width="110" 
                Height="32" 
                Margin="0,0,12,0" 
                Click="BtnCancelDownload_Click"
                Visibility="Collapsed"
                adonisExtensions:CornerRadiusExtension.CornerRadius="6"
                adonisExtensions:CursorSpotlightExtension.RelativeSpotlightSize="0.4"
                adonisExtensions:CursorSpotlightExtension.MaxBlurRadius="10"
                />
            <Button 
                x:Name="BtnUpdate" 
                Content="开始更新" 
                Width="110" 
                Height="32" 
                Margin="0,0,12,0" 
                IsEnabled="False"
                Click="BtnUpdate_Click"
                adonisExtensions:CornerRadiusExtension.CornerRadius="6"
                adonisExtensions:CursorSpotlightExtension.RelativeSpotlightSize="0.4"
                adonisExtensions:CursorSpotlightExtension.MaxBlurRadius="10"
                />
            <Button 
                x:Name="BtnClose" 
                Content="关闭" 
                Width="110" 
                Height="32" 
                Click="BtnClose_Click" 
                adonisExtensions:CornerRadiusExtension.CornerRadius="6"
                adonisExtensions:CursorSpotlightExtension.RelativeSpotlightSize="0.4"
                adonisExtensions:CursorSpotlightExtension.MaxBlurRadius="10"
                />
        </StackPanel>
    </Grid>
</adonisControls:AdonisWindow>